.container
    .well
        form.form-horizontal(name="companyForm")
            legend(translate='') Company Profile
            .form-group.required
                label.col-md-2.control-label(for="companyname", translate='') Company Name
                .col-md-10
                    input.form-control(name="companyname", type="text", ng-model="company.company_name")
            .form-group.required
                label.col-md-2.control-label(for="companycode", translate='') Company Type
                .col-md-5
                    select.form-control(ng-model="company.company_type")
                        option(value='TMI', translate='') TMI
                        option(value='KY', translate='') KY
                        option(value='AY', translate='') AY
                        option(value='OY', translate='') OY
                        option(value='Osuuskunta', translate='') Osuuskunta
                        option(value='Oppilaitos', translate='') Oppilaitos
                        option(value='Muu', translate='') Muu
                        option(value='YH', translate='') YH
            .form-group.required
                label.col-md-2.control-label(for="companycode", translate='') Company Code
                .col-md-10
                    input.form-control(name="companycode", type="text", ng-model="company.company_code")
            .form-group
                label.col-md-2.control-label(for="companystreet", translate='') Street
                .col-md-10
                    input.form-control(name="companystreet", type="text", ng-model="company.street")
            .form-group
                label.col-md-2.control-label(for="companycity", translate='') City
                .col-md-10
                    input.form-control(name="companycity", type="text", ng-model="company.city")
            .form-group
                label.col-md-2.control-label(for="companyzip", translate='') Zip
                .col-md-10
                    input.form-control(name="companyzip", type="text", ng-model="company.zip")
            .form-group.required
                label.col-md-2.control-label(for="companyphone", translate='') Phone
                .col-md-10
                    input.form-control(name="companyphone", type="text", ng-model="company.phone")
            .form-group
                label.col-md-2.control-label(for="companyaltphone", translate='') Alt Phone
                .col-md-10
                    input.form-control(name="companyaltphone", type="text", ng-model="company.alt_phone")
            .form-group
                label.col-md-2.control-label(for="companyfax", translate='') Fax
                .col-md-10
                    input.form-control(name="companyfax", type="text", ng-model="company.fax")
            .form-group
                label.col-md-2.control-label(for="companyweb", translate='') Web
                .col-md-10
                    input.form-control(name="companyweb", type="text", ng-model="company.web_url")
            .form-group.required
                label.col-md-2.control-label(for="companyemail", translate='') Email
                .col-md-10
                    input.form-control(name="companyemail", type="text", ng-model="company.email")
            .form-group
                label.col-md-2.control-label(for="contact", translate='') Contact
                .col-md-5
                    select.form-control(ng-model="company.contact" ng-options="person.id as person.pname for person in persons")
                        option(value='', translate='') Please select contact person
                .col-md-1
                    button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal")
                        span.glyphicon.glyphicon-plus
                        | {{'Add New' | translate}}
            .form-group
                .col-md-10.col-md-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="update()", ng-disabled="companyForm.$invalid", translate='') Submit
                        | &nbsp;
                        a.btn.btn-default(href="/companies", translate='') Cancel
    include ../common/person/person-modal