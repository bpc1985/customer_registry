.container
    .well
        form.form-horizontal(name="companyForm")
            fieldset
                legend Company Profile
                .form-group
                    label.col-md-2.control-label(for="companyname") Company Name
                    .col-md-10
                        input.form-control(name="companyname", type="text", ng-model="company.name")
                .form-group
                    label.col-md-2.control-label(for="companycode") Company Type
                    .col-md-5
                        select.form-control(ng-model="company.type")
                            option(value='OY') OY
                            option(value='KY') KY
                            option(value='AY') AY
                            option(value='OK') OK
                            option(value='TN') TN
                            option(value='KO') KO
                            option(value='YH') YH
                .form-group
                    label.col-md-2.control-label(for="companycode") Company Code
                    .col-md-10
                        input.form-control(name="companycode", type="text", ng-model="company.code")
                .form-group
                    label.col-md-2.control-label(for="companyphone") Phone
                    .col-md-10
                        input.form-control(name="companyphone", type="text", ng-model="company.phone")
                .form-group
                    label.col-md-2.control-label(for="companyaltphone") Alt Phone
                    .col-md-10
                        input.form-control(name="companyaltphone", type="text", ng-model="company.altphone")
                .form-group
                    label.col-md-2.control-label(for="companyfax") Fax
                    .col-md-10
                        input.form-control(name="companyfax", type="text", ng-model="company.fax")
                .form-group
                    label.col-md-2.control-label(for="companyweb") Web
                    .col-md-10
                        input.form-control(name="companyweb", type="text", ng-model="company.web")
                .form-group
                    label.col-md-2.control-label(for="companyemail") Email
                    .col-md-10
                        input.form-control(name="companyemail", type="text", ng-model="company.email")
                .form-group
                    label.col-md-2.control-label(for="contact1") Contact 1
                    .col-md-5
                        select.form-control(ng-model="company.contact1" ng-options="person.id as person.pname for person in persons")
                            option(value='') Please select contact person
                    .col-md-1
                        button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal") Add New
                .form-group
                    label.col-md-2.control-label(for="contact2") Contact 2
                    .col-md-5
                        select.form-control(ng-model="company.contact2" ng-options="person.id as person.pname for person in persons")
                            option(value='') Please select contact person
                    .col-md-1
                        button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal") Add New
                .form-group
                    label.col-md-2.control-label(for="contact3") Contact 3
                    .col-md-5
                        select.form-control(ng-model="company.contact3" ng-options="person.id as person.pname for person in persons")
                            option(value='') Please select contact person
                    .col-md-1
                        button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal") Add New
                .form-group
                    label.col-md-2.control-label(for="newsletter") Newsletter
                    .col-md-10
                        input.form-control(name="newsletter", type="checkbox", ng-model="company.newsletter")
                .form-group
                    label.col-md-2.control-label(for="number") Number
                    .col-md-10
                        input.form-control(name="number", type="text", ng-model="company.cnumber")
                .form-group
                    label.col-md-2.control-label(for="responsible1") Responsible 1
                    .col-md-5
                        select.form-control(ng-model="company.responsible1" ng-options="person.id as person.pname for person in persons")
                            option(value='') Please select responsible person
                    .col-md-1
                        button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal") Add New
                .form-group
                    label.col-md-2.control-label(for="responsible2") Responsible 2
                    .col-md-5
                        select.form-control(ng-model="company.responsible2" ng-options="person.id as person.pname for person in persons")
                            option(value='') Please select responsible person
                    .col-md-1
                        button.btn.btn-info(type="button" data-toggle="modal" data-target="#personModal") Add New
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="create()", ng-disabled="companyForm.$invalid") Submit
                            | &nbsp;
                            a.btn.btn-default(href="/companies") Cancel
    include ../common/person/person-modal
