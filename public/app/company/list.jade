.container
    .well
        .row
            .col-md-10
                h2(translate='') Companies
            .col-md-2.topspace
                a(href="/companies/create", translate='') New Company
        .table-reponsive
            table.table.table-striped
                thead
                    tr
                        th(translate='') Name
                        th(translate='') Type
                        th(translate='') Code
                        th(translate='') Phone
                        th(translate='') Email
                        th(translate='') Contact
                        th
                tbody 
                    tr(ng-repeat="company in companies | orderBy:name")
                        td {{company.company_name}}
                        td {{company.company_type}}
                        td {{company.company_code}}
                        td {{company.phone}}
                        td {{company.email}}
                        td {{company.contact1}}
                        td
                            a(href="/companies/{{company.id}}", translate='') Edit
                            | &nbsp;|&nbsp;
                            a(href="", ng-click="delete(company)", translate='') Delete
