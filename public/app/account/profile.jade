.container
    .well
        form.form-horizontal(name="profileForm")
            legend(translate='') User Profile
            .form-group
                label.col-md-2.control-label(for="email", translate='') Email
                .col-md-10
                    input.form-control(name="email", type="email", disabled="disabled", placeholder="Email", ng-model="email", required)
            .form-group
                label.col-md-2.control-label(for="fname", translate='') First Name
                .col-md-10
                    input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
            .form-group
                label.col-md-2.control-label(for="lname", translate='') Last Name
                .col-md-10
                    input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="lname", required)
            .form-group
                label.col-md-2.control-label(for="password", translate='') Password
                .col-md-10
                    input.form-control(name="password", type="password", placeholder="Password", ng-model="password")
            .form-group
                .col-md-10.col-md-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="update()", ng-disabled="profileForm.$invalid", translate='') Submit
                        | &nbsp;
                        a.btn.btn-default(href="/", translate='') Cancel