.navbar-collapse.collapse(ng-controller="crNavBarLoginCtrl")
    ul.nav.navbar-nav(ng-show="identity.isAuthenticated()")
        li
            a(href="/") Home
        li
            a(href="/companies") Companies
        li
            a(href="/persons") Persons
        li
            a(href="/offices") Offices
    .navbar-right
        form.navbar-form(ng-hide="identity.isAuthenticated()")
            ul.nav.navbar-nav
                li
                    a(href="/signup") Sign up
            .form-group
                input.form-control(placeholder="Email", ng-model="email")
            .form-group
                input.form-control(type="password", placeholder="Password", ng-model="password")
            button.btn.btn-primary(ng-click="signin(email, password)") Sign in
        ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
            li.dropdown
                a.dropdown-toggle(href="", data-toggle="dropdown")
                    | {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
                b.caret
                ul.dropdown-menu
                    li(ng-show="identity.currentUser.isAdmin()")
                        a(href="/admin/users") User Admin
                    li
                        a(href="/profile") Profile
                    li
                        a(href="", ng-click="signout()") Sign Out