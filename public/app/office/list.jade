.container
    .well
        .row
            .col-md-10
                h2(translate='') Offices
            .col-md-2.topspace
                a(href="/offices/create", translate='') New Office
        .table-reponsive
        table.table.table-striped
            thead
                tr
                    th(translate='') Name
                    th(translate='') Company
                    th(translate='') Address
                    th(translate='') Telephone
                    th(translate='') Responsible
                    th
            tbody
                tr(ng-repeat="office in offices | orderBy:office_name")
                    td {{office.office_name}}
                    td {{office.company.company_name}}
                    td {{office.contact_info.street_address}}, {{office.contact_info.city}}
                    td {{office.contact_info.phone}}
                    td {{office.contact_persons[0].pname}}
                    td
                        a(href="/offices/{{office.id}}", translate='') Edit
                        | &nbsp;|&nbsp;
                        a(href="", ng-click="delete(office)", translate='') Delete
