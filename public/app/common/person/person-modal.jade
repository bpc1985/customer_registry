section(ng-controller="crPersonCreateCtrl")
    #personModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                    h4.modal-title(translate='') Add New Person
                .modal-body
                    form.form-horizontal(name="personForm")
                        .form-group.required(ng-class="{ 'has-error': personForm.personname.$invalid && personForm.personname.$dirty}")
                            label.col-md-2.control-label(for="personname", translate='') Person Name
                            .col-md-10
                                input.form-control(name="personname", type="text", required, ng-model="person.pname")
                        .form-group.required(ng-class="{ 'has-error': personForm.persontitle.$invalid && personForm.persontitle.$dirty}")
                            label.col-md-2.control-label(for="persontitle", translate='') Title
                            .col-md-10
                                input.form-control(name="persontitle", type="text", required, ng-model="person.title")
                        .form-group
                            label.col-md-2.control-label(for="persontelephone", translate='') Person Phone
                            .col-md-10
                                input.form-control(name="persontelephone", type="text", ng-model="person.telephone")
                        .form-group
                            label.col-md-2.control-label(for="personemail", translate='') Email
                            .col-md-10
                                input.form-control(name="personemail", type="text", ng-model="person.email")
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal', translate='') Close
                    button.btn.btn-primary(type='button', ng-click="create('modal-company')", data-dismiss='modal', translate='') Save
